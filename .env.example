# Application Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=v1/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=hh_backend_user
DB_PASSWORD=your_secure_password_here
DB_NAME=hh_backend
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_MIGRATIONS_RUN=true

# SSL Configuration (for production database connections)
# DB_SSL_CA=
# DB_SSL_CERT=
# DB_SSL_KEY=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Health Hub

# Email URLs
EMAIL_VERIFICATION_URL=https://yourdomain.com/verify-email
EMAIL_PASSWORD_RESET_URL=https://yourdomain.com/reset-password

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=hh-backend-uploads
STORAGE_TYPE=s3
STORAGE_PATH=

# Session Configuration (if using sessions)
SESSION_SECRET=your_session_secret_here_min_32_characters

# Cache Configuration (if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Queue Configuration (if using Bull/Redis)
# QUEUE_HOST=localhost
# QUEUE_PORT=6379

